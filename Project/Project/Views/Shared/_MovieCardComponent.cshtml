@*
    string argument 1: movie poster
    string argument 2: movie rating
    string argument 3: movie title

    Usage:
    @await Html.PartialAsync("_MovieCardComponent", Tuple.Create(movie.Poster, movie.Ratings, movie.Title))
*@

@model Tuple<string, string, string, string>

<div class="card bg-secondary-color" style="width: 18rem;">
    <div class="card-img-container">
        <a href="/movies/@Model.Item4">
            @if (!string.IsNullOrEmpty(movie.Movie_poster) && movie.Movie_poster != "N/A")
            {
                <img class="card-img-top" src="@Model.Item1" alt="Card image cap">
            }
            else
            {
                <img class="card-img-top" src="@Url.Content("~/images/poster_not_found.png")" alt="Card image cap">
            }
        </a>
    </div>
    <div class="card-body d-flex flex-column">
        <p class="card-text"><i class="fa-solid fa-star" style="color: #FFD43B;"></i>@Model.Item2</p>
        <h6 class="card-title mb-3"><a href="#">@Model.Item3</a></h6>
        <div class="mt-auto text-center">
            @await Html.PartialAsync("_PrimaryButton", Tuple.Create("See Movie", "style-2", "", "href=#", "button"))
        </div>
    </div>
</div>
