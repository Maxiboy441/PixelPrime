@*
    list argument 1: movies list

    Usage:
    @await Html.PartialAsync("_ProfileMovieCardComponent", Tuple.Create(moviesList))
*@

@model Tuple<List<Project.DummyData.Movie>>

<div class="d-flex flex-column flex-md-row gap-3 flex-wrap">
    @foreach (var movie in Model.Item1)
    {
        <div class="card bg-secondary-color movie-card" style="width: 18rem;" data-movie-id="@movie.imdbID">
            <button class="btn btn-danger close-btn" aria-label="Close">X</button>
            <div class="card-img-container">
                <a href="#"><img class="card-img-top" src="@movie.Poster" alt="Card image cap"></a>
            </div>
            <div class="card-body-movie d-flex flex-column">
                <h6 class="card-title my-2"><a href="#">@movie.Title</a></h6>
            </div>
        </div>
    }
</div>