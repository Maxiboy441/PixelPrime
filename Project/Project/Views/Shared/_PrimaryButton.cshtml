        "a"))
-->

@model Tuple<string, string, string, string, string>

@{
    string btnClass;

    switch (Model.Item2)
    {
        case "style-1":
            <!-- Style f.ex. GetStarted or AddReview -->
            btnClass = "btn btn-outline-dark";
            break;
        case "style-2":
            <!-- Style f.ex. SeeMovie -->
            btnClass = "btn btn-outline-light";
            break;
        <!-- No Style given -->
        default:
            btnClass = "";
            break;
    }
}

<@Model.Item5 @Model.Item4 class="@btnClass @Model.Item3">@Model.Item1</@Model.Item5>

@if (Model.Item2 == "style-1")
{
    <style>
        .btn.btn-outline-dark {
            background-color: #5D18EB;
            color: white;
            border-color: #5D18EB;
        }

            .btn.btn-outline-dark:hover {
                background-color: #460fbc;
            }
    </style>
}