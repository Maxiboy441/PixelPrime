*@

@model Tuple<List<Project.Models.Movie>, Boolean>

<div class="d-flex">
    @await Html.PartialAsync("_ProfileMovieCardComponent", Tuple.Create(Model.Item1, Model.Item2))

    <div id="side-card-container">
        @foreach (var movie in Model.Item1)
        {
            <div class="d-flex d-none side-card gap-3" data-movie-id="@movie.Id">
                <div class="side-btn-container align-self-center">
                    <button class="btn btn-lg close-side-container">
                        <i class="fa-solid fa-angle-right fa-2xl"></i>
                    </button>
                </div>
                <div class="card bg-secondary-color" style="width: 18rem;">
                    <div class="card-img-container">
                        <a href="#"><img class="card-img-top" src="@movie.Poster" alt="Card image cap"></a>
                    </div>
                    <div class="card-body-movie d-flex flex-column">
                        <p class="card-title mt-3"><a href="#">@movie.Genre</a></p>
                        <hr />
                        <p class="card-title"><a href="#">@movie.Plot</a></p>
                        <p class="card-text"><i class="fa-solid fa-star" style="color: #FFD43B;"></i>@movie.PixelRating</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

