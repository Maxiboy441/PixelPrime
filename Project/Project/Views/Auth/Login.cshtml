@model Project.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section class="">
    <div class="row d-flex justify-content-center align-items-center p-5">
        <div class="col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3">
            <form asp-action="login" method="post" class="rounded p-4 bg-secondary-color">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="d-flex flex-column justify-content-center align-items-center">
                    <h2 class="text-center fw-bold mb-4">Sign In</h2>

                    <div asp-validation-summary="ModelOnly" class="text-danger w-100" role="alert"></div>

                    <div class="form-group w-100">
                        <label asp-for="Email" class="col-form-label">Email</label>
                        <input asp-for="Email" class="form-control rounded-pill mb-2" type="email" autocomplete="email" aria-required="true" placeholder="Email" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group w-100">
                        <label asp-for="Password" class="col-form-label">Password</label>
                        <input asp-for="Password" class="form-control rounded-pill mb-2" type="password" aria-required="true" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn fw-bold rounded-pill text-white mb-3 mt-3" style="background: #7432F9">Login</button>
                </div>

                <div class="d-flex flex-column justify-content-center align-items-center">
                    <hr class="w-75 text-light" />
                    <a class="w-75 btn rounded-pill fw-bold text-white btn-green" asp-action="SignUp">Create a new account</a>
                </div>
            </form>
        </div>
    </div>
</section>
