@model User

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="overflow-x-hidden">
        <form asp-action="login" method="post" class="bg-secondary-color p-5">
            <h2 class="text-center fw-bold mb-4 display-6">Welcome Back!</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <label asp-for="Email" class="col-md-4 col-form-label">Email</label>

            <div class="form-group mb-3 align-items-left">
                <input asp-for="Email" class="form-control w-100 rounded-pill mb-2" type="email" name="email" id="email" autocomplete="email" aria-required="true" placeholder="Username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <label asp-for="Password" class="col-md-4 col-form-label">Password</label>

            <div class="form-group mb-3 align-items-left">
                <input asp-for="Password" class="form-control w-100 rounded-pill mb-2" type="password" name="password" id="password" aria-required="true" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4 mt-4">
                <button id="login-submit" type="submit" class="w-100 btn fw-bold" style="background: #7432F9">Login</button>
            </div>

            <div class="d-flex flex-column justify-content-center align-items-center" style="margin-left: 30px">
                <hr class="w-75 text-light" />
                <a class="w-75 btn btn-primary btn-success fw-bold" asp-action="SignUp">Create new account</a>
            </div>
        </form>
    </div>
</div>