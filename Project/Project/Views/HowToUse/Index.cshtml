@{
ViewData["Title"] = "How to use";
}

<div class="container mt-5">
    <div class="container py-3 px-5">
        <h1>How to Use Our Movie Platform</h1>

        <h2 class="mt-5">Welcome to Pixel Prime!</h2>
        <p class="mt-3 mb-5">
            Welcome to our movie platform, where you can discover, save, review, and get recommendations for movies you love. This guide will walk you through how to make the most out of your experience!
        </p>

        <div class="row">
            <!-- Card 1 -->
            <div class="col-md-4 mb-4 d-flex">
                <div class="card bg-purple text-light flex-fill" style="width: 100%;">
                    <div class="p-3">
                        <h5 class="card-title">Sign Up / Log In</h5>
                        <p class="card-text">To access all features, make sure you're signed in.</p>
                        <ul>
                            <li>Click on the Sign-Up or Log In button in the top-right corner.</li>
                            <li>You're all set! Start exploring.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4 mb-4 d-flex">
                <div class="card bg-purple text-light flex-fill" style="width: 100%;">
                    <div class="p-3">
                        <h5 class="card-title">Browse Movies and Series</h5>
                        <p class="card-text">Explore Movies.</p>
                        <ul>
                            <li>Search for movies or check the most rated movies.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4 mb-4 d-flex">
                <div class="card bg-purple text-light flex-fill" style="width: 100%;">
                    <div class="p-3">
                        <h5 class="card-title">Add Movies to Favorites</h5>
                        <p class="card-text">Keep track of your favorite movies so you can easily find them later.</p>
                        <ul>
                            <li>When you find a movie you like, click on the "Add to Favorites" button.</li>
                            <li>You can view your favorite movies by visiting the Favorites section from "My Space".</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Card 4 -->
            <div class="col-md-4 mb-4 d-flex">
                <div class="card bg-purple text-light flex-fill" style="width: 100%;">
                    <div class="p-3">
                        <h5 class="card-title">Add Movies to Watchlist</h5>
                        <p class="card-text">Planning to watch a movie later? Add it to your watchlist.</p>
                        <ul>
                            <li>On any movie page, click the "Add to Watchlist" button.</li>
                            <li>Access your watchlist anytime through "My Space" to see the movies you plan to watch.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Card 5 -->
            <div class="col-md-4 mb-4 d-flex">
                <div class="card bg-purple text-light flex-fill" style="width: 100%;">
                    <div class="p-3">
                        <h5 class="card-title">Write Reviews and Give Ratings</h5>
                        <p class="card-text">Share your thoughts with the community by writing reviews or rating movies you've seen.</p>
                        <ul>
                            <li>In the movie's page click "Rate Movie" to leave your rating</li>
                            <li>To add a review scroll to the "Reviews" section and click "Add Review".</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Card 6 -->
            <div class="col-md-4 mb-4 d-flex">
                <div class="card bg-purple text-light flex-fill" style="width: 100%;">
                    <div class="p-3">
                        <h5 class="card-title">Get AI-Based Movie Recommendations</h5>
                        <p class="card-text">Let our AI help you discover new movies based on your preferences and viewing history.</p>
                        <ul>
                            <li>After adding a movie to your favorites or rating a movie, you'll receive new recommendations on your next login, updated every 7 days.</li>
                            <li>Visit "My Space" to find all your recommendations.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
